<UserControl x:Class="ShaderEditor.FolderCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ShaderEditor"
             Width="200" Height="100">
    <!-- 绘世卡片尺寸：宽200，高100 -->
    <!-- 卡片容器：深灰背景、圆角6、悬停高亮 -->
    <Border 
        Background="#FF2A2A2A" 
        CornerRadius="6" 
        Margin="8"
        Effect="{StaticResource CardShadow}">
        <!-- 轻微阴影增强立体感 -->

        <!-- 卡片内容布局（图标+文字） -->
        <Grid Margin="15,10">
            <!-- 内部边距：左右15，上下10 -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"/>
                <!-- 图标区域（固定宽度） -->
                <ColumnDefinition Width="*"/>
                <!-- 文字区域（占剩余宽度） -->
            </Grid.ColumnDefinitions>

            <!-- 自定义图标区域（允许外部传入图标） -->
            <ContentControl x:Name="IconContainer" 
                            Grid.Column="0" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center"/>

            <!-- 文字区域（标题+副标题） -->
            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                <!-- 与图标间距10 -->
                <!-- 标题（如“根目录”） -->
                <TextBlock x:Name="TitleText" 
                           Foreground="White" 
                           FontSize="14" 
                           FontWeight="Medium"/>
                <!-- 副标题（如文件夹路径） -->
                <TextBlock x:Name="SubtitleText" 
                           Foreground="#FFAAAAAA"
                           FontSize="11" 
                           Margin="0,5,0,0"/> <!-- 与标题间距5 -->
            </StackPanel>
        </Grid>

        <!-- 鼠标悬停效果（背景提亮） -->
        <Border.Triggers>
            <EventTrigger RoutedEvent="MouseEnter">
                <BeginStoryboard>
                    <Storyboard>
                        <ColorAnimation 
                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" 
                            To="#FF3A3A3A" Duration="0:0:0.2"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
            <EventTrigger RoutedEvent="MouseLeave">
                <BeginStoryboard>
                    <Storyboard>
                        <ColorAnimation 
                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" 
                            To="#FF2A2A2A" Duration="0:0:0.2"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Border.Triggers>
    </Border>
</UserControl>