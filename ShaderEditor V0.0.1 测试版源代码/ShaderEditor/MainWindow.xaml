<Window x:Class="ShaderEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" 
        Style="{StaticResource MaterialDesignWindow}"
        xmlns:local="clr-namespace:ShaderEditor"
        mc:Ignorable="d"
        Title="ShaderEditor (by 丛雨绯闻男友) V0.0.1 测试版  主窗口" Height="900" Width="1600"
        WindowState="Maximized">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- 左侧导航 -->
                <ColumnDefinition Width="*"/>
                <!-- 中间内容 -->
                <ColumnDefinition Width="300"/>
                <!-- 右侧公告 -->
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Background="#FF2D2D2D" BorderBrush="#FF555555" BorderThickness="0,0,2,0" Width="{Binding ElementName=NavContainer, Path=Width}">
                <!-- 导航栏宽度动画的目标（默认60，拉伸后200） -->
                <Grid x:Name="NavContainer" Width="60" HorizontalAlignment="Left">
                    <!-- 按钮容器（垂直排列） -->
                    <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                        <!-- 每个按钮包含：图标 + 功能文字（默认隐藏） -->
                        <Button Style="{StaticResource NavButtonStyle}" Margin="5,5,5,0" Click="LaunchButton_Click">
                            <StackPanel Orientation="Horizontal" Width="200">
                                <materialDesign:PackIcon Kind="Play" Width="24" Height="24"/>
                                <!-- 启动按钮的图标 -->
                                <TextBlock Text="启动" Foreground="White" Margin="15,0,0,0"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource NavButtonStyle}" Margin="5,5,5,0">
                            <StackPanel Orientation="Horizontal" Width="200">
                                <materialDesign:PackIcon Kind="Settings" Width="24" Height="24"/>
                                <TextBlock Text="设置" Foreground="White" Margin="15,0,0,0"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource NavButtonStyle}" Margin="5,5,5,0">
                            <StackPanel Orientation="Horizontal" Width="200">
                                <materialDesign:PackIcon Kind="Lightbulb" Width="24" Height="24"/>
                                <TextBlock Text="帮助" Foreground="White" Margin="15,0,0,0"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource NavButtonStyle}" Margin="5,5,5,0">
                            <StackPanel Orientation="Horizontal" Width="200">
                                <materialDesign:PackIcon Kind="Database" Width="24" Height="24"/>
                                <TextBlock Text="模型管理" Foreground="White" Margin="15,0,0,0"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource NavButtonStyle}" Margin="5,5,5,0">
                            <StackPanel Orientation="Horizontal" Width="200">
                                <materialDesign:PackIcon Kind="Wrench" Width="24" Height="24"/>
                                <TextBlock Text="小工具" Foreground="White" Margin="15,0,0,0"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource NavButtonStyle}" Margin="5,5,5,0">
                            <StackPanel Orientation="Horizontal" Width="200">
                                <materialDesign:PackIcon Kind="HelpCircle" Width="24" Height="24"/>
                                <TextBlock Text="关于" Foreground="White" Margin="15,0,0,0"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- 导航栏拉伸/收缩动画 -->
                <Border.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation 
                        Storyboard.TargetName="NavContainer" 
                        Storyboard.TargetProperty="Width" 
                        From="60" To="200" Duration="0:0:0.3"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation 
                        Storyboard.TargetName="NavContainer" 
                        Storyboard.TargetProperty="Width" 
                        From="200" To="60" Duration="0:0:0.3"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Border.Triggers>
            </Border>
            <ScrollViewer Grid.Column="1"  VerticalScrollBarVisibility="Auto">
                <StackPanel Background="#FF2D2D2D">
                    <Grid Height="250" Margin="25,20,25,0">
                        <Image Source="banner.png" Stretch="UniformToFill" Opacity="0.7"/>
                        <Grid Background="#80000000">
                            <StackPanel Margin="30,20">
                                <TextBlock Text="Shader 编辑器" Foreground="White" FontSize="22" FontWeight="Bold"/>
                                <TextBlock Text="" Foreground="White" FontSize="18" Margin="0,5"/>
                                <TextBlock Text="" Foreground="White" FontSize="14" Margin="0,5"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                    <StackPanel Margin="25,20,25,0">
                    <TextBlock Text="文件夹" Foreground="White" FontSize="18" FontWeight="Medium"  Margin="0,0,0,15"/>
                    <WrapPanel>
                        <local:FolderCard Title="程序目录"  Subtitle="." >
                            <local:FolderCard.Icon>
                                <materialDesign:PackIcon  Kind="FolderOpen"  Width="28" Height="28"  Foreground="#FF9D4EDD"/>
                            </local:FolderCard.Icon>
                        </local:FolderCard>

                        <local:FolderCard  Title="扩展文件夹" Subtitle="extensions">
                            <local:FolderCard.Icon>
                                <materialDesign:PackIcon  Kind="Extension"  Width="28" Height="28"  Foreground="#FF9D4EDD"/>
                            </local:FolderCard.Icon>
                        </local:FolderCard>

                        <local:FolderCard  Title="临时文件夹"  Subtitle="temp">
                            <local:FolderCard.Icon>
                                <materialDesign:PackIcon  Kind="Clock"  Width="28" Height="28"  Foreground="#FF9D4EDD"/>
                            </local:FolderCard.Icon>
                        </local:FolderCard>

                        <local:FolderCard  Title="钢铁雄心4目录"  Subtitle="Hearts of Iron IV">
                            <local:FolderCard.Icon>
                                <materialDesign:PackIcon  Kind="ImageMultiple"  Width="28" Height="28"  Foreground="#FF9D4EDD"/>
                            </local:FolderCard.Icon>
                        </local:FolderCard>

                        <local:FolderCard Title="着色器目录"  Subtitle="FX">
                            <local:FolderCard.Icon>
                                <materialDesign:PackIcon Kind="Grid"  Width="28" Height="28"  Foreground="#FF9D4EDD"/>
                            </local:FolderCard.Icon>
                        </local:FolderCard>
                        
                        <local:FolderCard Title="纹理库目录" Subtitle="txt2img-images">
                            <local:FolderCard.Icon>
                                <materialDesign:PackIcon Kind="Image" Width="28" Height="28" Foreground="#FF9D4EDD"/>
                            </local:FolderCard.Icon>
                        </local:FolderCard>

                        <local:FolderCard Title="后续功能模块" Subtitle="后续功能模块目录">
                            <local:FolderCard.Icon>
                                <materialDesign:PackIcon  Kind="ImageEdit"  Width="28" Height="28"  Foreground="#FF9D4EDD"/>
                            </local:FolderCard.Icon>
                        </local:FolderCard>

                        <local:FolderCard Title="后续功能模块"  Subtitle="后续功能模块目录">
                            <local:FolderCard.Icon>
                                <materialDesign:PackIcon Kind="ImageFilterHdr"  Width="28" Height="28"  Foreground="#FF9D4EDD"/>
                            </local:FolderCard.Icon>
                        </local:FolderCard>
                    </WrapPanel>
                   </StackPanel>
                 </StackPanel>
            </ScrollViewer>
            <StackPanel Grid.Column="2" Background="#FF2D2D2D" Margin="1,0,0,0">
                <TextBlock Text="公告" Foreground="White" FontSize="16" Margin="15,15,0,10" FontWeight="Medium"/>
                <ScrollViewer Margin="10" Height="Auto">
                    <TextBlock Foreground="#FFaaaaaa" FontSize="12" LineHeight="18">
                            <Run>本编辑器免费提供</Run><LineBreak/><LineBreak/>
                            <Run>本编辑器唯一发布地点位于 </Run><LineBreak/><LineBreak/>
                            <Run>我看心情发</Run><LineBreak/><LineBreak/>
                            <Run>如遇各类使用问题，自行使用源码修正</Run>
                    </TextBlock>
                </ScrollViewer>

                <StackPanel Margin="15,10">
                    <TextBlock Foreground="#FFaaaaaa" FontSize="12">编辑器版本: V0.0.1 测试版</TextBlock>
                    <TextBlock Foreground="#FFaaaaaa" FontSize="12">自述文件版本: 2025/12/7</TextBlock>
                    <TextBlock Foreground="#FFaaaaaa" FontSize="12">检查器版本: V0.0.1 测试版 (此版本暂未实装)</TextBlock>
                    <TextBlock Foreground="#FFaaaaaa" FontSize="12">开发者: 丛雨绯闻男友</TextBlock>
                    <TextBlock Foreground="#FFaaaaaa" FontSize="12">所属组织: 霜泽图书馆</TextBlock>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>

</Window>
